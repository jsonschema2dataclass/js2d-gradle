root=true

[*]
end_of_line = lf
insert_final_newline = true
tab_width = 4
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
charset = utf-8

# The JSON files contain newlines inconsistently
[*.json]
indent_size = 2
tab_width = 2
insert_final_newline = false

[*.{yml,yaml}]
tab_width = 2
indent_size = 2

[*.diff]
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
trim_trailing_whitespace = false


[*.{kt,kts}]
max_line_length = 120
ktlint_standard_no-wildcard-imports = enabled
ktlint_standard_filename = disabled
ktlint_standard_multiline-expression-wrapping = disabled
ktlint_standard_string-template-indent = disabled
ktlint_standard_function-signature = disabled
ktlint_standard_annotation = disabled
ktlint_standard_parameter-list-wrapping = disabled

# enable trailing commas per JetBrains recommendation
# (https://kotlinlang.org/docs/coding-conventions.html#trailing-commas)
ij_kotlin_allow_trailing_comma_on_call_site = true
ij_kotlin_allow_trailing_comma = true
ij_kotlin_name_count_to_use_star_import = 100
ij_kotlin_name_count_to_use_star_import_for_members = 100
